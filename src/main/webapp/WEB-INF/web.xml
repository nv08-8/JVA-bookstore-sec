<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>JVA Bookstore</display-name>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <!-- JSP Servlet Configuration for Java 11 -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>compilerSourceVM</param-name>
            <param-value>11</param-value>
        </init-param>
        <init-param>
            <param-name>compilerTargetVM</param-name>
            <param-value>11</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>web.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
        <url-pattern>/api/auth/register</url-pattern>
        <url-pattern>/api/auth/send-otp</url-pattern>
        <url-pattern>/api/auth/verify-otp</url-pattern>
        <url-pattern>/api/auth/reset-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>web.VerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyServlet</servlet-name>
        <url-pattern>/api/auth/verify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResetServlet</servlet-name>
        <servlet-class>web.ResetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetServlet</servlet-name>
        <url-pattern>/api/auth/reset</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BooksApiServlet</servlet-name>
        <servlet-class>web.BooksApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BooksApiServlet</servlet-name>
        <url-pattern>/api/books</url-pattern>
        <url-pattern>/api/books/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HealthServlet</servlet-name>
        <servlet-class>web.HealthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HealthServlet</servlet-name>
        <url-pattern>/api/health</url-pattern>
    </servlet-mapping>

    
    

</web-app>
